{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C Program",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "gcc",
                "\"${file}\"",
                "-o",
                "\"${fileDir}\\${fileBasenameNoExtension}.exe\"",
                "&&",
                "\"${fileDir}\\${fileBasenameNoExtension}.exe\"",
                "&&",
                "pause"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Builds and runs a C file"
        }
    ]
}
